<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../include/title.ejs') %>
    <link href="/css/event/events.css" rel="stylesheet" type="text/css">
</head>
<body>
    <%- include('../include/header.ejs') %>
    <%- include('../include/nav.ejs') %>

    <article>
        <div class="events_wrap">
            <h2>이벤트 목록</h2>
            <table>
                <thead>
                    <tr>
                        <th>제목</th>
                        <th>이미지</th>
                        <th>설명</th>
                        <th>시작일</th>
                        <th>종료일</th>
                        <th>상태</th>
                        <th>관리</th>
                    </tr>
                </thead>
                <tbody>
                    <% events.forEach(event => { %>
                        <tr>
                            <td><%= event.E_TITLE %></td>
                            <td><img src="/<%= event.E_NO %>/<%= event.E_IMAGE %>" alt="<%= event.E_TITLE %>" width="100" /></td>
                            <td><%= event.E_DESC %></td>
                            <td><%= event.E_START_DATE.toISOString().split('T')[0] %></td>
                            <td><%= event.E_END_DATE.toISOString().split('T')[0] %></td>
                            <td>
                                <form action="/event/event_status/<%= event.E_NO %>" method="POST" style="display:inline;">
                                    <button type="submit">
                                        <%= event.E_ACTIVE === 2 ? '활성화' : '비활성화' %>
                                    </button>
                                </form>
                            </td>
                            <td>
                                <a href="/event/modify_event_form/<%= event.E_NO %>">수정</a>
                                <form action="/event/delete_event_confirm" method="POST" style="display:inline;">
                                    <input type="hidden" name="eventId" value="<%= event.E_NO %>">
                                    <button type="submit">삭제</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            <a href="/event/register_event_form">이벤트 등록</a>
        </div>
    </article>

    <%- include('../include/footer.ejs') %>
</body>
</html>
